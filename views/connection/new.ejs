<%- include('../partials/header.ejs') %>
<main class="main-form main-content">
    <div class="container"> 
      <br>
      <form action='/connection' enctype="multipart/form-data" method='POST'>
        <div>
          <label for="category">Category:</label>
<select id="category" name="category" required onchange="toggleNewCategory()">
  <option value="">Select Category</option>
  <option value="Meeting">Meeting</option>
  <option value="Design">Design</option>
  <option value="QNA">QNA</option>
  <option value="Coding">Coding</option>
  <option value="Others">Others</option>
</select>

<div id="newCategoryContainer" style="display: none;">
  <label for="newCategory">New Category:</label>
  <input type="text" id="newCategory" name="newCategory" placeholder="Enter new category">
</div>

        <div class="new-form">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" placeholder="Enter event title" required>
        
            <label for="host">Host:</label>
            <input type="text" id="host" name="host" placeholder="Enter host name" required>
        
            <label for="details">Details:</label>
            <textarea id="details" name="details" placeholder="Enter event details" required minlength="10"></textarea>
        
            <label for="where">Where:</label>
            <input type="text" id="where" name="where" placeholder="Enter location" required>
        
            <label for="startdate">Start Date:</label>
            <input type="date" id="startdate" name="startdate" required>
        
            <label for="start">Start Time:</label>
            <input type="time" id="start" name="start" required>

            <label for="enddate">End Date:</label>
            <input type="date" id="enddate" name="enddate" required>
        
            <label for="end">End Time:</label>
            <input type="time" id="end" name="end" required>
        
            <label for="image">Image:</label>
            <input type="file" id="image" name="image" required>
        
            <button type="submit">Submit</button>
        </div>
      </form>
</main>
<%- include('../partials/footer.ejs') %>

<script>
  function toggleNewCategory() {
      var categorySelect = document.getElementById('category');
      var newCategoryContainer = document.getElementById('newCategoryContainer');

      // If "Others" is selected, show the new category input field; otherwise, keep it visible
      if (categorySelect.value === 'Others') {
          newCategoryContainer.style.display = 'block';
      }
  }
</script>

